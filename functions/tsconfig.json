{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "types": [
      "jest"
    ],
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    
  },
  "compileOnSave": true,
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]

}
